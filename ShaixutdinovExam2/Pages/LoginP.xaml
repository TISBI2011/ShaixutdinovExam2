<Page x:Class="ShaixutdinovExam2.Pages.LoginP"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ShaixutdinovExam2.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginP" Background="White">

    <Grid>
        <StackPanel Width="200" Height="200">
            <TextBlock Text="Login" HorizontalAlignment="Center" Margin="5" />
            <TextBox Text="{Binding login}" />
            <TextBlock Text="Password" HorizontalAlignment="Center" Margin="5"/>
            <TextBox Text="{Binding password}"/>
            <Button x:Name="LogBT" Content="LogIn" Margin="5" Click="LogBT_Click"/>
        </StackPanel>
    </Grid>
</Page>
